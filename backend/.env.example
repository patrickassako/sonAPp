# ============================================================================
# MusicApp Backend - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================================

# ----------------------------------------------------------------------------
# ENVIRONMENT
# ----------------------------------------------------------------------------
ENVIRONMENT=development  # development | staging | production
DEBUG=true               # Set to false in production
PORT=8000               # Port for the web server

# ----------------------------------------------------------------------------
# SUPABASE (Required)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ----------------------------------------------------------------------------
# JWT / AUTH (Required)
# For ES256 (new Supabase projects): Leave JWT_SECRET empty, uses JWKS
# For HS256 (legacy): Set your JWT secret from Supabase dashboard
# ----------------------------------------------------------------------------
JWT_SECRET=your-jwt-secret-from-supabase
ALGORITHM=ES256  # ES256 (recommended) or HS256

# ----------------------------------------------------------------------------
# REDIS (Required for background jobs)
# Local: redis://localhost:6379/0
# Upstash: redis://default:xxx@xxx.upstash.io:6379
# ----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# SUNO API (Required for music generation)
# Get your key from: https://sunoapi.org
# ----------------------------------------------------------------------------
SUNO_API_KEY=your-suno-api-key
SUNO_BASE_URL=https://api.sunoapi.org

# ----------------------------------------------------------------------------
# FLUTTERWAVE (Required for payments)
# Get your keys from: https://dashboard.flutterwave.com/settings/apis
# ----------------------------------------------------------------------------
FLUTTERWAVE_SECRET_KEY=your-flutterwave-secret-key
FLUTTERWAVE_PUBLIC_KEY=your-flutterwave-public-key
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret

# ----------------------------------------------------------------------------
# CORS (Required)
# Comma-separated list of allowed origins
# Production: https://yourdomain.com
# ----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000

# ----------------------------------------------------------------------------
# OPTIONAL
# ----------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/musicapp  # If using direct DB
# OPENAI_API_KEY=your-openai-key  # For AI lyrics (if implemented)
# UPLOAD_DIR=./uploads  # Local file storage path
